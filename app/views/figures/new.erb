<h1>Create a new figure</h1>
<form action="/figures" method="post">
	<p>Figure Name:<input type="text" name="figure[name]" id="figure_name"></p>
	<p>Choose an existing title:</p>
	<%Title.all.each do |title|%>
	<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
	<%end%>
	<p>or create a new one</p>
	<p>Title:<input type="text" name="title[name]" id="new_title"></p>
	<br>
	<p>Choose an existing landmark:</p>
	<%Landmark.all.each do |landmark|%>
	<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
	<%end%>
	<p>or create a new one</p>
	<p>Landmark Name:<input type="text" name="landmark[name]" id="new_landmark"></p>
	<br>
	<button value="submit">Create New Figure</button>
</form>
